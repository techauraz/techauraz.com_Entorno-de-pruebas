ransition: color 0.3s; \/* Transición de color *\/\n    }\n\n    .boton-editar:hover {\n      color: #black; \/* Cambio de color al pasar el ratón *\/\n    }\n\n    .boton-editar::before {\n      content: '';\n      position: absolute;\n      width: 20px;\n      height: 2px;\n      background-color: white;\n      border-radius: 2px;\n      animation: moveLine 1s infinite alternate; \/* Animación de la línea *\/\n    }\n\n    .boton-editar::before,\n    .boton-editar::after {\n      content: '';\n      position: absolute;\n      width: 30px;\n      height: 2px;\n      background-color: white;\n      border-radius: 2px;\n      animation: moveLine 1s infinite alternate; \/* Animación de la línea *\/\n    }\n\n    .boton-editar::before {\n      top: -5px;\n    }\n\n    .boton-editar::after {\n      bottom: -5px;\n    }\n\n    @keyframes moveLine {\n      0% {\n        left: -10px;\n        background-color: white;\n      }\n      50% {\n        left: 276px;\n        background-color: #5A738D;\n      }\n      100% {\n        left: -10px;\n        background-color: white;\n      }\n    }\n\n    .modal {\n      display: none;\n      position: absolute;\n      z-index: 1;\n      left: 0;\n      top: 0;\n      width: 100%;\n      height: 100%;\n      overflow: auto;\n      background-color: rgba(0, 0, 0, 0.4);\n      padding-top: 60px;\n      z-index: 9999992;\n    }\n\n    .modal-contenido {\n      background-color: #fefefe;\n      margin: 5% auto;\n      padding: 20px;\n      border: 1px solid #888;\n      width: 360px;\n      right: 0px;\n      border-radius: 10px;\n      position: absolute;\n      top: 0px;\n      z-index: 9999999;\n    }\n\n    .cerrar {\n      color: #aaa;\n      float: right;\n      font-size: 28px;\n      font-weight: bold;\n    }\n\n    .cerrar:hover,\n    .cerrar:focus {\n      color: black;\n      text-decoration: none;\n      cursor: pointer;\n    }\n\n    .mensaje-exito {\n      position: fixed;\n      bottom: 20px;\n      left: 50%;\n      transform: translateX(-50%);\n      background-color: #4CAF50;\n      color: white;\n      padding: 15px 20px;\n      border-radius: 10px;\n      display: none;\n      z-index: 99999;\n    }\n  `;\n\n  \/\/ HTML y JavaScript\n  var html = `\n    <button id=\"abrirModal\" class=\"boton-editar\" onclick=\"abrirModal()\">Edita tu contenido aquí<\/button>\n\n    <div id=\"modal\" class=\"modal\" style=\"display: none;\">\n      <div class=\"modal-contenido\">\n        <span class=\"cerrar\" onclick=\"cerrarModal()\">&times;<\/span>\n        <h2>Especifica el contenido para la memoria USB:<\/h2>\n        <input type=\"text\" id=\"nombre\" placeholder=\"Nombre\" style=\"display: block; width: 100%; height: 40px; outline: none; box-sizing: border-box; margin-bottom: 10px; border-radius: 4px; border: 1px solid #5A738D;\">\n        <input type=\"tel\" id=\"telefono\" placeholder=\"Teléfono\" maxlength=\"10\" oninput=\"this.value = this.value.replace(\/[^0-9]\/g, '').slice(0, 10)\" style=\"display: block; width: 100%; height: 40px; outline: none; box-sizing: border-box; margin-bottom: 10px; border-radius: 4px; border: 1px solid #5A738D;\">\n        <input type=\"text\" id=\"contenido\" placeholder=\"Música, videos, artistas, películas, géneros, etc.\" style=\"display: block; width: 100%; height: 140px; outline: none; box-sizing: border-box; margin-bottom: 10px; border-radius: 4px; border: 1px solid #5A738D;\">\n        <img src=\"https:\/\/th.bing.com\/th\/id\/OIP.IWC06gYi3Ue2eKETnQVG1AHaHa?rs=1&pid=ImgDetMain\" alt=\"Imagen\" style=\"width: 30px; height: auto; transform: rotate(90deg);\">\n        <button id=\"enviarBtn\" onclick=\"enviarCorreo()\" style=\"background: #5A738D; position: absolute; left: 80px; bottom: 35px; border-radius: 4px; border: 1px solid #5A738D; color: white;\">Enviar<\/button>\n      <\/div>\n    <\/div>\n\n    <div id=\"mensajeExito\" class=\"mensaje-exito\" style=\"background: #5A738D; z-index; 99999999;\">Mensaje enviado con éxito<\/div>\n  `;\n\n  \/\/ Insertar estilos CSS en el head\n  var head = document.head || document.getElementsByTagName('head')[0];\n  var style = document.createElement('style');\n  style.type = 'text\/css';\n  if (style.styleSheet){\n    style.styleSheet.cssText = css;\n  } else {\n    style.appendChild(document.createTextNode(css));\n  }\n  head.appendChild(style);\n\n  \/\/ Insertar HTML al final del body\n  document.body.innerHTML += html;\n\n  \/\/ Función para abrir el modal\n  function abrirModal() {\n    var modal = document.getElementById(\"modal\");\n    var botonEditar = document.getElementById(\"abrirModal\");\n    modal.style.display = \"block\";\n    botonEditar.style.display = \"none\"; \/\/ Ocultar el botón\n  }\n\n  \/\/ Función para cerrar el modal\n  function cerrarModal() {\n    var modal = document.getElementById(\"modal\");\n    var botonEditar = document.getElementById(\"abrirModal\");\n    modal.style.display = \"none\";\n    botonEditar.style.display = \"inline-block\"; \/\/ Mostrar el botón\n  }\n\n  \/\/ Función para enviar el correo electrónico y mostrar el mensaje de éxito\n  function enviarCorreo() {\n    var nombre = document.getElementById(\"nombre\").value;\n    var telefono = document.getElementById(\"telefono\").value;\n    var contenido = document.getElementById(\"contenido\").value;\n\n    \/\/ Verificar si todos los campos están llenos\n    if (nombre && telefono && contenido) {\n      var mensaje = \"Nombre: \" + nombre + \"\\nTeléfono: \" + telefono + \"\\nContenido: \" + contenido;\n      window.location.href = \"mailto:blasterm236@gmail.com?subject=Nuevo contenido para la memoria USB&body=\" + mensaje;\n\n      \/\/ Mostrar el mensaje de éxito\n      var mensajeExito = document.getElementById(\"mensajeExito\");\n      mensajeExito.style.display = \"block\";\n\n      \/\/ Ocultar el mensaje de éxito después de 5 segundos\n      setTimeout(function() {\n        mensajeExito.style.display = \"none\";\n      }, 5000);\n\n      \/\/ Ocultar el modal inmediatamente después de enviar el mensaje\n      var modal = document.getElementById(\"modal\");\n      modal.style.display = \"none\";\n\n      \/\/ Mostrar el botón para abrir el modal\n      var botonEditar = document.getElementById(\"abrirModal\");\n      botonEditar.style.display = \"inline-block\";\n    } else {\n      alert(\"Por favor, completa todos los campos antes de enviar el mensaje.\");\n    }\n  }\n<\/script>"}},"description":{"type":"description","settings":{}},"share":{"type":"share","settings":{"share_label":"Share"}},"custom_liquid_XafnmM":{"type":"custom_liquid","settings":{"custom_liquid":""}}},"block_order":["vendor","title","price","variant_picker","quantity_selector","custom_liquid_bBXLAz","custom_liquid_iwbQtH","buy_buttons","custom_liquid_YKYHBn","description","share","custom_liquid_XafnmM"],"settings":{"enable_sticky_info":true,"color_scheme":"scheme-1","media_size":"medium","constrain_to_viewport":true,"media_fit":"contain","gallery_layout":"thumbnail_slider","media_position":"left","image_zoom":"hover","mobile_thumbnails":"hide","hide_variants":true,"enable_video_looping":false,"padding_top":36,"padding_bottom":12}},"related-products":{"type":"related-products","settings":{"heading":"You may also like","heading_size":"h2","products_to_show":4,"columns_desktop":4,"color_scheme":"scheme-1","image_ratio":"square","image_shape":"default","show_secondary_image":true,"show_vendor":false,"show_rating":false,"columns_mobile":"2","padding_top":36,"padding_bottom":28}},"171500672571a9dd42":{"type":"apps","settings":{"include_margins":true}}},"order":["main","related-products","171500672571a9dd42"]}