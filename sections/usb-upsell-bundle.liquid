{% schema %}
{
"name": "USB Upsell",
"tag": "section",
"class": "usb-landing usb-upsell-section",
"settings": [
{ "type": "text", "id": "heading", "label": "Título", "default": "Añade más valor a tu pedido" }
],
"blocks": [
{
"type": "product",
"name": "Producto Upsell",
"settings": [
{ "type": "product", "id": "product", "label": "Producto" },
{ "type": "text", "id": "badge", "label": "Badge", "default": "Recomendado" },
{ "type": "text", "id": "benefit", "label": "Beneficio rápido", "default": "Graba tu logo" }
]
}
],
"presets": [{ "name": "USB Upsell" }]
}
{% endschema %}

<div class="usb-landing"> <section class="usb-section usb-upsell" data-animate> <div class="usb-container"> <h2>{{ section.settings.heading }}</h2> <div class="usb-upsell__grid"> {% for block in section.blocks %} {% assign p = block.settings.product %} {% if p %} <div class="usb-upsell-item"> {% if block.settings.badge != blank %}<span class="usb-upsell-badge">{{ block.settings.badge }}</span>{% endif %} <a href="{{ p.url }}" class="usb-upsell-img"> {% if p.featured_image %} <img src="{{ p.featured_image | image_url: width: 360 }}" width="{{ p.featured_image.width }}" height="{{ p.featured_image.height }}" loading="lazy" alt="{{ p.title | escape }}"> {% endif %} </a> <h3 class="usb-upsell-title">{{ p.title }}</h3> <p class="usb-upsell-benefit">{{ block.settings.benefit }}</p> <p class="usb-upsell-price">{{ p.price | money_without_trailing_zeros }}</p> <form method="post" action="/cart/add"> <input type="hidden" name="id" value="{{ p.selected_or_first_available_variant.id }}"> <button type="submit" class="usb-btn usb-btn--small">Añadir</button> </form> </div> {% endif %} {% endfor %} </div> </div> </section> </div> <style> .usb-upsell__grid{ display:grid; gap:1.2rem; grid-template-columns:repeat(auto-fit,minmax(180px,1fr)); margin-top:1.2rem; } .usb-upsell-item{ background:#141c23;border:1px solid #24313c; border-radius:16px;padding:.8rem .75rem 1rem; position:relative;display:flex;flex-direction:column;gap:.45rem; font-size:.7rem; } .usb-upsell-badge{ position:absolute;top:8px;left:8px; background:var(--usb-accent);color:#0d141a;font-size:.55rem; padding:.25rem .45rem;border-radius:12px;font-weight:600;letter-spacing:.5px; } .usb-upsell-img{ aspect-ratio:1/1;display:block;overflow:hidden;border-radius:12px; background:#1d262e; } .usb-upsell-img img{width:100%;height:100%;object-fit:cover;display:block;} .usb-upsell-title{margin:.3rem 0 0;font-size:.75rem;line-height:1.2;} .usb-upsell-benefit{margin:0;color:#8fa3b2;font-size:.63rem;} .usb-upsell-price{margin:.1rem 0 .4rem;font-weight:600;font-size:.73rem;} .usb-btn--small{font-size:.6rem;padding:.5rem .65rem;border-radius:10px;} </style>