{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* MEJORAS PARA PRODUCTOS RELACIONADOS */
  .related-products {
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    border-radius: 20px;
    padding: 60px 40px;
    margin: 60px 0; 
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }

  .related-products__heading {
    text-align: center;
    font-size: 3.5rem;
    font-weight: 800;
    color: #1a365d;
    margin-bottom: 50px;
    position: relative;
  }

  .related-products__heading::after {
    content: "";
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(45deg, #667eea, #764ba2);
    border-radius: 2px;
  }

  .related-products .grid {
    gap: 30px;
  }

  .related-products .card-wrapper {
    background: #202a3d;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .related-products .card-wrapper:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
  }

  .related-products .card {
    border-radius: 15px;
    overflow: hidden;
    background: white;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .related-products .card:hover {
    border-color: #3182ce;
  }

  .related-products .card__media {
    position: relative;
    overflow: hidden;
  }

  .related-products .card__media::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .related-products .card:hover .card__media::after {
    opacity: 1;
  }

  .related-products .card__information {
    padding: 25px 20px;
  }

  .related-products .card__heading {
    font-size: 1.6rem;
    font-weight: 600;
    color: #1a365d;
    margin-bottom: 10px;
    line-height: 1.4;
  }

  .related-products .price {
    font-size: 1.8rem;
    font-weight: 700;
    color: #3182ce;
  }

  @media (max-width: 768px) {
    .related-products {
      padding: 40px 20px;
      margin: 40px 0;
    }

    .related-products__heading {
      font-size: 2.8rem;
      margin-bottom: 40px;
    }

    .related-products .grid {
      gap: 20px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient no-js-hidden">
  <product-recommendations
    class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        ✨ {{ section.settings.heading }} ✨
      </h2>
      <ul
        class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
        role="list"
      >
        {% for recommendation in recommendations.products %}
          <li class="grid__item">
            {% render 'card-product',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
            %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {% render 'mask-arch' %}
  {%- endif -%}
</div>

