{% schema %}
{
"name": "USB Figura",
"tag": "section",
"class": "usb-landing usb-figure-section",
"settings": [
{ "type": "image_picker", "id": "image", "label": "Imagen" },
{ "type": "text", "id": "alt", "label": "Texto ALT", "default": "Imagen ilustrativa de USB" },
{ "type": "textarea", "id": "caption", "label": "Pie de imagen", "default": "Descripci√≥n o detalle." },
{ "type": "checkbox", "id": "alt_bg", "label": "Usar fondo alterno", "default": false }
],
"presets": [{ "name": "USB Figura" }]
}
{% endschema %}

<div class="usb-landing"> <section class="usb-section {% if section.settings.alt_bg %}alt{% endif %}" data-animate> <div class="usb-container"> <figure class="usb-figure"> {% if section.settings.image %} {% assign img = section.settings.image %} <div class="usb-img-ph" style="padding-top: {{ 100.0 | times: img.height | divided_by: img.width }}%;"></div> <img src="{{ img | image_url: width: 960 }}" srcset=" {{ img | image_url: width: 480 }} 480w, {{ img | image_url: width: 720 }} 720w, {{ img | image_url: width: 960 }} 960w, {{ img | image_url: width: 1200 }} 1200w " sizes="(max-width: 820px) 100vw, 960px" width="{{ img.width }}" height="{{ img.height }}" alt="{{ section.settings.alt | escape }}"> {% else %} <div style="aspect-ratio:16/9;background:#222;display:flex;align-items:center;justify-content:center;color:#666;">Sube una imagen</div> {% endif %} {% if section.settings.caption != blank %} <figcaption>{{ section.settings.caption }}</figcaption> {% endif %} </figure> </div> </section> </div>