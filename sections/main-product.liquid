/* ===== RESET Y VARIABLES ===== */
:root {
  --primary-color: #1a365d;
  --secondary-color: #3182ce;
  --accent-color: #e53e3e;
  --success-color: #38a169;
  --warning-color: #d69e2e;
  --text-color: #2d3748;
  --text-light: #4a5568;
  --background-light: #f7fafc;
  --background-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --border-color: #e2e8f0;
  --shadow-light: 0 4px 12px rgba(0,0,0,0.1);
  --shadow-medium: 0 8px 20px rgba(0,0,0,0.15);
  --shadow-strong: 0 12px 30px rgba(0,0,0,0.2);
  --border-radius: 20px;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ===== LAYOUT PRINCIPAL CORREGIDO ===== */
.product {
  display: grid !important;
  grid-template-columns: 1fr 1fr !important;
  gap: 60px !important;
  align-items: start !important;
  margin: 0 auto !important;
  padding: 40px 20px !important;
}

.product__media-wrapper {
  width: 100% !important;
  position: sticky !important;
  top: 100px !important;
  height: fit-content !important;
  z-index: 1 !important;
  width: 100% !important;
  justify-content: center !important;
  align-items: center !important;
}

.product__media-wrapper img {
  width: 100% !important;
  height: 100% !important;
  object-fit: cover !important; /* Cambiado de 'contain' a 'cover' */
  border-radius: 16px !important;
  box-shadow: 0 5px 20px rgba(0,0,0,0.1) !important;
  margin: 0 auto !important;
  display: block !important;
  background-color: transparent !important; /* Elimina fondo negro */
}

/* Eliminar cualquier fondo oscuro del contenedor */
.product__media-wrapper,
.product-media-container,
.product__media.media {
  background-color: transparent !important;
}

/* Espec√≠fico para el contenedor de medios */
.product-media-container.media-type-image {
  background: transparent !important;
}

/* Si hay un pseudo-elemento creando el borde */
.product-media-container:before,
.product-media-container:after {
  display: none !important;
}


.product__description,
.product__info-wrapper,
.product__media-wrapper {
  overflow: visible !important;
}

.product__info-wrapper {
  padding-left: 0 !important;
}

.product__price {
  font-size: 2.2rem !important;
  padding: 20px !important;
  margin-bottom: 20px !important;
}

.price {
  font-size: 2.8rem !important;
  font-weight: 800 !important;
  color: var(--secondary-color) !important;
  display: block !important;
}

.price--on-sale .price__regular {
  text-decoration: line-through !important;
  color: var(--text-light) !important;
  font-size: 2rem !important;
  margin-right: 15px !important;
}

.price--on-sale .price__sale {
  color: var(--accent-color) !important;
  font-size: 2.8rem !important;
}

/* Badge de descuento */
