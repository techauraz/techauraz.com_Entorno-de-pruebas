{% schema %}
{
"name": "USB Beneficios",
"tag": "section",
"class": "usb-landing usb-benefits-bar",
"settings": [
{ "type": "text", "id": "title", "label": "Título (opcional)", "default": "¿Por qué TechAura?" }
],
"blocks": [
{
"type": "item",
"name": "Beneficio",
"settings": [
{ "type": "text", "id": "icon", "label": "Emoji/Icono", "default": "⚡" },
{ "type": "text", "id": "heading", "label": "Encabezado", "default": "Capacidad Real Verificada" },
{ "type": "text", "id": "text", "label": "Texto", "default": "Probamos cada lote antes de enviarlo." }
]
}
],
"presets": [{ "name": "USB Beneficios" }]
}
{% endschema %}

<div class="usb-landing"> <section class="usb-section usb-benefits" data-animate> <div class="usb-container"> {% if section.settings.title != blank %} <h2 class="usb-benefits__title">{{ section.settings.title }}</h2> {% endif %} <div class="usb-benefits__grid"> {% for block in section.blocks %} <div class="usb-benefit"> <div class="usb-benefit__icon">{{ block.settings.icon }}</div> <h3>{{ block.settings.heading }}</h3> <p>{{ block.settings.text }}</p> </div> {% endfor %} </div> </div> </section> </div> <style> .usb-benefits__grid{ display:grid; gap:1rem; grid-template-columns:repeat(auto-fit,minmax(160px,1fr)); margin-top:1rem; } .usb-benefit{ background:#151e25; border:1px solid #24313c; padding:.9rem .85rem; border-radius:14px; font-size:.7rem; position:relative; overflow:hidden; transition:.35s; } .usb-benefit:before{ content:""; position:absolute;inset:0; opacity:0; background:radial-gradient(circle at 30% 20%,rgba(90,150,255,.25),transparent 60%); transition:.5s; } .usb-benefit:hover:before{opacity:1;} .usb-benefit__icon{ font-size:1.3rem;line-height:1; margin-bottom:.35rem; } .usb-benefit h3{ font-size:.75rem;margin:.1rem 0 .3rem; } .usb-benefit p{margin:0;color:#b2c0cc;line-height:1.3;} </style>